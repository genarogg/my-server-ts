    "@prisma/client": "^6.2.1",
    "argon2": "^0.41.1",
    "colors": "^1.4.0",
    "console-clear": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-react-views": "^0.11.0",
    "graphql": "^16.10.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
