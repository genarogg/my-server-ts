{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],

    "baseUrl": ".",
    "paths": {
      "@router": ["src/routers/index.ts"],
      "@email/*": ["src/email/*"]
    }
  },

  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
