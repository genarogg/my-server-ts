{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],

    "baseUrl": ".",
    "paths": {
      "@route/*": ["src/routers/*"],
      "@controller/*": ["src/routers/*"]
    }
  },

  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
