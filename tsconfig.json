{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],

    "baseUrl": "./src",
    "paths": {
      "@fn": ["config/functions/index.ts"],
      "@router": ["routers/index.ts"],
      "@email/*": ["email/*"]
    }
  },

  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
